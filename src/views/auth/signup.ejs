<%- layout('layout/main.ejs') %>

<div class="container d-flex justify-content-center p-4">
        <form method="POST" action="/signup" class="card mt-3 form-registro anim" style="width: 580px;">
            <div class="card-header bg-dark">
                <h3 class="card-title text-center text-white p-0">Formulario de Registro</h3>
            </div>
            <div class="card-body">
                <% if(data.length > 0){ %>
                    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputNombre">Nombre</label>
                            <input type="text" maxlength="30" value="<%= data[0].name %>" class="form-control" required name="name" id="inputNombre">
                        </div>
    
                        <div class="form-group col-md-6">
                            <label for="inputApellido">Apellido</label>
                            <input type="text" maxlength="30" value="<%= data[0].lastname %>" class="form-control" required name="lastname" id="inputApellido">
                        </div>
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCi">Cédula (Documento de identidad)</label>
                            <input type="number" maxlength="30" value="<%= data[0].ci %>" class="form-control" required name="ci" id="inputCi">
                        </div>
    
                        <div class="form-group col-md-6">
                            <label for="inputTelefono">Teléfono</label>
                            <input type="number" maxlength="11" minlength="11" value="<%= data[0].phone %>" class="form-control" required name="phone" id="inputTelefono">
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label for="inputCorreo">Correo</label>
                        <input id="inputCorreo" maxlength="40" value="<%= data[0].email %>" class="form-control" type="email" required name="email">
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputClave">Contraeña</label>
                            <input type="password" value="<%= data[0].password %>" class="form-control" required name="password" id="inputClave">
                        </div>
    
                        <div class="form-group col-md-6">
                            <label for="inputClave2">Confirmar Contraseña</label>
                            <input type="password" value="<%= data[0].password2 %>" class="form-control" required name="password2" id="inputClave2">
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label for="inputAddress">Dirección</label>
                        <input type="text" maxlength="200" value="<%= data[0].address %>" class="form-control" required name="address" id="inputAddress">
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">Ciudad</label>
                            <input type="text" value="<%= data[0].city %>" class="form-control" required name="city" id="inputCity">
                        </div>
    
                            
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input type="number" maxlength="5" value="<%= data[0].zip %>" class="form-control" required name="zip" id="inputZip">
                        </div>
    
                        <div class="form-group col-md-4">
                            <label for="inputState">Pais</label>
                            <select id="inputState" name="country" value="<%= data[0].country %>" class="form-control">
                                <option value="Venezuela"> Venezuela</option>
                                <option value="Panamá"> Panamá</option>
                            </select>
                        </div>
                        
                    </div>

                <% }else {%> 
                    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputNombre">Nombre</label>
                            <input type="text" maxlength="30" class="form-control" required name="name" id="inputNombre">
                        </div>
    
                        <div class="form-group col-md-6">
                            <label for="inputApellido">Apellido</label>
                            <input type="text" maxlength="30" class="form-control" required name="lastname" id="inputApellido">
                        </div>
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCi">Cédula (Documento de identidad)</label>
                            <input type="number" maxlength="30" class="form-control" required name="ci" id="inputCi">
                        </div>
    
                        <div class="form-group col-md-6">
                            <label for="inputTelefono">Teléfono</label>
                            <input type="number" maxlength="11" minlength="11" class="form-control" required name="phone" id="inputTelefono">
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label for="inputCorreo">Correo</label>
                        <input id="inputCorreo" maxlength="40" class="form-control" type="email" required name="email">
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputClave">Contraeña</label>
                            <input type="password" class="form-control" required name="password" id="inputClave">
                        </div>
    
                        <div class="form-group col-md-6">
                            <label for="inputClave2">Confirmar Contraseña</label>
                            <input type="password" class="form-control" required name="password2" id="inputClave2">
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label for="inputAddress">Dirección</label>
                        <input type="text" maxlength="200" class="form-control" required name="address" id="inputAddress">
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">Ciudad</label>
                            <input type="text" class="form-control" required name="city" id="inputCity">
                        </div>
    
                            
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input type="number" maxlength="5" class="form-control" required name="zip" id="inputZip">
                        </div>
    
                        <div class="form-group col-md-4">
                            <label for="inputState">Pais</label>
                            <select id="inputState" name="country" class="form-control">
                                <option selected>Venezuela</option>
                                <option>Panamá</option>
                            </select>
                        </div>
                        
                    </div>

                <% } %>    

                <%if(error.length > 0){ %>
                    <div class="alert alert-danger text-center">
                        <%= error %>
                    </div>
                <% } %>  
                
                <button type="submit" class="btn btn-dark btn-block">Registrarse</button>
            </div>
        </form>
    </div>