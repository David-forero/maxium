<%- layout('layout/dashboard') %>

<% if(success.length > 0){ %>
    <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
        <p class="mb-0"><%= success %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>  

<div class="row mt-5">
    <div class="col-lg-8">

    </div>

    <div class="col-lg-4">
        <form action="/dashboard/config/password" method="POST" class="card wow fadeInUp" data-wow-delay="0.2s">
            <div class="card-header bg-dark text-light">
                <h3 class="text-center">Cambiar contraseña</h3>
            </div>
            <div class="card-body">
                <% if(data.length > 0){ %>
                    <div class="form-group">
                        <label>Contraseña actual:</label>
                        <input type="password" required value="<%= data[0].password_old %>" name="password_old" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <label>Contraseña nueva:</label>
                        <input type="password" required value="<%= data[0].passwordNew %>" name="passwordNew" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <label>Confirmar contraseña nueva:</label>
                        <input type="password" required value="<%= data[0].passwordNew2 %>" name="passwordNew2" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <button class="btn btn-primary btn-block py-2 px-4">Cambiar</button>
                    </div>
                <% }else{ %>
                    <div class="form-group">
                        <label>Contraseña actual:</label>
                        <input type="password" required name="password_old" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <label>Contraseña nueva:</label>
                        <input type="password" required name="passwordNew" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <label>Confirmar contraseña nueva:</label>
                        <input type="password" required name="passwordNew2" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <button class="btn btn-primary btn-block py-2 px-4">Cambiar</button>
                    </div>
                <% } %>        

                <% if(error.length > 0){ %>
                    <div class="alert alert-danger text-center">
                        <%= error %>
                    </div>
                <% } %>  
            </div>
        </form>
    </div>
</div>