<%- layout('layout/dashboard') %>

<div class="row p-5">
    <div class="col-lg-8 offset-md-2 wow fadeInUp" data-wow-delay="0.2s">
        <form action="/curse/add" method="post" class="card">
            <div class="card-header">
                <h3 class="card-title">Crear un nuevo curso</h3>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label>Título del curso:</label>
                        <input type="text" maxlength="50" name="title" class="form-control" required placeholder="Curso de...">
                    </div>
                    
                    <div class="form-group col-md-4">
                        <label>Consultor:</label>
                        
                        <select class="form-control" name="consultant" required>
                            <option disabled selected>...</option>
                            <option value="Jhonatan Maderos">Jhonatan Maderos</option>
                            <option value="David Forero">David Forero</option>
                            <option value="Jhonas Canvals">Jhonas Canvals</option>
                            <option value="Yuli Rojas">Yuli Rojas</option>
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <label>Modalidad:</label>

                        <select class="form-control" name="modo" required>
                            <option disabled selected>...</option>
                            <option value="Presencial">Presencial</option>
                            <option value="Online">Online</option>
                        </select>                        
                    </div>
                </div>

                <div class="form-row">
                    <label>Descripción del curso</label>

                    <div class="col-md-12 form-group">
                        <textarea name="description" class="form-control" rows="8"></textarea>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label>Lugar:</label>
                        <select class="form-control" name="place">
                            <option disabled selected>...</option>
                            <option value="">Hotel Gran Casino - Los Teques (Venezuela)</option>
                            <option value="">Plaza Venezuela - Caracas (Venezuela)</option>
                            <option value="">Skype</option>
                            <option value="">DUO</option>
                            <option value="">Hangsgout</option>
                        </select>
                    </div>

                    <div class="form-group col-md-4">
                        <label>Desde (Hora):</label>
                        <select class="form-control" name="timeFrom">
                            <option disabled selected>...</option>
                            <option value="8:00am">8:00am</option>
                            <option value="8:30am">8:30am</option>
                            <option value="9:00am">9:00am</option>
                            <option value="9:30am">9:30am</option>
                            <option value="10:00am">10:00am</option>
                            <option value="10:30am">10:30am</option>
                            <option value="11:00am">11:00am</option>
                            <option value="11:30am">11:30am</option>
                            <option value="12:00pm">12:00pm</option>
                            <option value="1:00pm">1:00pm</option>
                            <option value="1:30pm">1:30pm</option>
                            <option value="2:00pm">2:00pm</option>
                            <option value="2:30pm">2:30pm</option>
                            <option value="3:00pm">3:00pm</option>
                            <option value="3:30pm">3:30pm</option>
                            <option value="4:00pm">4:00pm</option>
                            <option value="4:30pm">4:30pm</option>
                            <option value="5:00pm">5:00pm</option>
                            <option value="5:30pm">5:30pm</option>
                            <option value="6:00pm">6:00pm</option>
                        </select>
                    </div>

                    <div class="form-group col-md-4">
                        <label>Hasta (Hora):</label>
                        <select class="form-control" name="timeUntil">
                            <option disabled selected>...</option>
                            <option value="8:00am">8:00am</option>
                            <option value="8:30am">8:30am</option>
                            <option value="9:00am">9:00am</option>
                            <option value="9:30am">9:30am</option>
                            <option value="10:00am">10:00am</option>
                            <option value="10:30am">10:30am</option>
                            <option value="11:00am">11:00am</option>
                            <option value="11:30am">11:30am</option>
                            <option value="12:00pm">12:00pm</option>
                            <option value="1:00pm">1:00pm</option>
                            <option value="1:30pm">1:30pm</option>
                            <option value="2:00pm">2:00pm</option>
                            <option value="2:30pm">2:30pm</option>
                            <option value="3:00pm">3:00pm</option>
                            <option value="3:30pm">3:30pm</option>
                            <option value="4:00pm">4:00pm</option>
                            <option value="4:30pm">4:30pm</option>
                            <option value="5:00pm">5:00pm</option>
                            <option value="5:30pm">5:30pm</option>
                            <option value="6:00pm">6:00pm</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Costo:</label>
                        <input type="number" name="price" class="form-control">
                    </div>
                    
                    <div class="form-group col-md-6">
                        <label>Imagen del curso:</label>
                        <input type="file" name="image" required>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 p-3">

        <div style="width: 300px;" class="card m-2 wow fadeInUp" data-wow-delay="0.2s">
            <a href=""><img src="/img/hackerman-computers.jpg" class="card-img-top" alt=""></a>
            
            <div class="card-body">
                <a href=""><h3 class="card-title text-primary">Curso de Python Básico</h3></a>

                <p><i class="fa fa-user"></i> Participantes: 36</p>
                <p><i class="fa fa-clock-o"></i> Hace 3 dias</p>
            </div>
        </div>
    </div>
</div>